<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_purple_500</item>

        <item name="toolbar_theme">@style/Toolbar</item>
        <item name="popupTheme">@style/Toolbar_Popup</item>
        <item name="window_background">@color/background_material_light</item>
        <item name="drawer_background">@color/background_material_light</item>
        <item name="card_background">@color/cardview_light_background</item>

        <item name="divider_color">@color/md_purple_100</item>
        <item name="reply_button">@color/md_purple_500</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbar_theme">@style/Toolbar</item>
        <item name="popupTheme">@style/Toolbar_Popup_Dark</item>
        <item name="window_background">@color/background_material_dark</item>
        <item name="drawer_background">@color/background_material_dark</item>
        <item name="card_background">@color/md_grey_800</item>

        <item name="divider_color">@color/md_teal_100</item>
        <item name="reply_button">@color/md_teal_500</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Toolbar_Popup" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="Toolbar_Popup_Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:background">?card_background</item>
    </style>
</resources>
