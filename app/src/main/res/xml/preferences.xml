<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

        <ListPreference
            android:key="theme_preference"
            android:title="Theme"
            android:summary="Change Theme: Requires Restart"
            android:entries="@array/themeNames"
            android:entryValues="@array/themeValues"
            android:dialogTitle="Set Theme"
            android:defaultValue="0"/>

    <ListPreference
        android:key="thread_view"
        android:title="Thread Layout"
        android:summary="Change Thread Layout"
        android:entries="@array/threadLayoutNames"
        android:entryValues="@array/threadLayoutValues"
        android:dialogTitle="Change Thread Layout"
        android:defaultValue="0"/>
</PreferenceScreen>